# Hurl Test Variables
# Configure these values based on your ejabberd deployment

# Server configuration  
base_url=http://127.0.0.1:8080
domain=localhost
admin_password=admin123
test_password=test123

# Authentication tokens (these will be captured during tests)
access_token=
user_token=

# LDAP configuration (if using LDAP auth)
ldap_server=ldap.example.com
ldap_bind_dn=cn=admin,dc=example,dc=com
ldap_bind_password=ldappassword

# SQL configuration (if using SQL auth)
sql_host=localhost
sql_database=ejabberd
sql_username=ejabberd
sql_password=sqlpassword

# External auth configuration
external_auth_url=http://auth.example.com/validate

# TLS/Certificate paths (if using certificate auth)
cert_file=/path/to/client.crt
key_file=/path/to/client.key

# Test user credentials for different auth methods
internal_test_user=testuser
internal_test_password=test123
ldap_test_user=ldapuser
ldap_test_password=ldappassword
sql_test_user=sqluser
sql_test_password=sqlpassword 